<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.stu.entity.Book" table="book" schema="stu">
        <id name="bookId">
            <column name="book_id" sql-type="varchar(60)" length="60"/>
        </id>
        <property name="bookName">
            <column name="book_name" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="borrowTime">
            <column name="borrow_time" sql-type="date" not-null="true"/>
        </property>
        <property name="returnTime">
            <column name="return_time" sql-type="date" not-null="true"/>
        </property>
        <property name="expirationTime">
            <column name="expiration_time" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="expiration">
            <column name="expiration" sql-type="varchar(5)" length="5" not-null="true"/>
        </property>

        <many-to-one name="student" class="com.stu.entity.Student" lazy="false">
            <column name="book_sid"></column>
        </many-to-one>
    </class>
</hibernate-mapping>