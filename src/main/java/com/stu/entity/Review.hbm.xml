<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.stu.entity.Review" table="review" schema="stu">
        <id name="reviewId">
            <column name="review_id" sql-type="varchar(60)" length="60"/>
        </id>
        <property name="reviewContent">
            <column name="review_content" sql-type="text" not-null="true"/>
        </property>

        <many-to-one name="student" class="com.stu.entity.Student" lazy="false">
            <column name="stu_id"></column>
        </many-to-one>
        <many-to-one name="mark" class="com.stu.entity.Mark" lazy="false">
            <column name="mark_id"></column>
        </many-to-one>
    </class>
</hibernate-mapping>