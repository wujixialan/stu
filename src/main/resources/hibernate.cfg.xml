<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="show_sql">false</property>
        <property name="format_sql">false</property>
        <mapping resource="com/stu/entity/Clazz.hbm.xml"></mapping>
        <mapping resource="com/stu/entity/Student.hbm.xml"></mapping>
        <mapping resource="com/stu/entity/Mark.hbm.xml"/>
        <mapping resource="com/stu/entity/User.hbm.xml"/>
        <mapping resource="com/stu/entity/Info.hbm.xml"/>
    </session-factory>
</hibernate-configuration>